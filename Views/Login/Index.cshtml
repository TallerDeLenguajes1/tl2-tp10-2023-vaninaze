@{
    ViewData["Title"] = "Logueo";
}
@using EspacioTablero
@using tl2_tp10_2023_vaninaze.ViewModels
@model UsuarioView

<div class="text-center m-4 p-4">
    <h1 class="text-success">Logueo</h1>
    <form class="m-auto w-50 form-floating" asp-controller="Login" asp-action="Login" method="post">
        <fieldset>
            <div class="form-floating mb-3">
                <label for="floatingInput" asp-for="@Model.Nombre_de_usuario">Nombre de usuario:</label>
                <input type="text" asp-for="@Model.Nombre_de_usuario" class="form-control" id="floatingInput" placeholder="name@example.com">
                <span asp-validation-for="@Model.Nombre_de_usuario" class="text-danger"></span>   
            </div>
            <div class="form-floating">
                <label for="floatingPassword" asp-for="@Model.Pass">Contraseña</label>
                <input type="password" asp-for="@Model.Pass" class="form-control" id="floatingPassword" placeholder="contraseña">
                <span asp-validation-for="@Model.Pass" class="text-danger"></span>
            </div>
            <button type="submit" class="btn my-4 px-3 fs-3 btn-outline-success">Enviar</button>
        </fieldset>
    </form>
</div>
@section Scripts{<partial name="_ValidationScriptsPartial"/>}
