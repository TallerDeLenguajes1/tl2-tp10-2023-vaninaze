@{
    ViewData["Title"] = "Crear Usuario";    
}
@using EspacioViewModels
@model UsuarioCrearView

@if(Model.TieneMensajeDeError)
{
    <p>@Model.MensajeDeError</p>
}
<div class="text-center d-flex flex-column align-items-center">
    <h1 class="text-dark">Crear Usuario</h1>
    <form class="w-50 my-2 p-4 border border-3 border-dark rounded-2 border-opacity-25 needs-validation" novalidate="novalidate"  asp-controller="Usuario" asp-action="CrearUsuario" method="post">
        <fieldset>
            <div class="mb-3">
                <div class="mb-3 has-validation">
                    <label asp-for="@Model.Nombre_de_usuario" class="form-label text-center">Nombre de usuario</label>
                    <input asp-for="@Model.Nombre_de_usuario" class="form-control"/>
                    <span asp-validation-for="@Model.Nombre_de_usuario" class="text-danger"></span>
                </div>
                <div class="mb-3 has-validation">
                    <label asp-for="@Model.Pass" class="form-label text-center">Contrase√±a</label>
                    <input asp-for="@Model.Pass" class="form-control"/>
                    <span asp-validation-for="@Model.Pass" class="text-danger"></span>
                </div>
                <div class="mb-3 has-validation">
                    <label asp-for="@Model.Rol" class="form-label text-center">Rol</label>
                    <select class="form-select" aria-label="Default select example" asp-for="@Model.Rol">
                        <option value="0" selected>Operador</option>
                        <option value="1">Administrador</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-info">Crear</button>
            </div>
        </fieldset>
    </form>
</div>
@section Scripts{<partial name="_ValidationScriptsPartial"/>}